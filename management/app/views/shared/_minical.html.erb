<h1>Broadcast calendar</h1>

<% form_remote_tag :url => (program.nil? ? global_date_selection_path : program_date_selection_path(program.urlname)), 
					:update => 'minical' do %>

	<%= select_year date %>
	<%= select_month date %>
	<%= submit_tag "Go" %>
<% end %>

<%= broadcasts_calendar(date.year, date.month, broadcasts, program) %>
