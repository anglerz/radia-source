<ul>
	<% if logged_in? %>
		<% permitted_to? :oversee, :program_schedule do %>
			<%=	navigation_item(:dashboard, dashboard_path, false) %>
		<% end %>
		
		<% permitted_to? :oversee, :programs do %>
			<%= navigation_item(:author_dashboard, author_path(current_user), false) %>
		<% end %>
		
		<%= navigation_item(:schedule) %>
	
		<%= navigation_item(:programs) %>
		
		<% permitted_to? :read, :audio_assets do %>
			<%= navigation_item(:audio_assets, audio_path) %>
		<% end %>
		
		<% permitted_to? :manage, :schedule do %>
			<%= navigation_item(:settings, settings_path, false) %>
		<% end %>

		<%= navigation_item(:my_account, user_path(current_user), true) %>
		
		<% permitted_to? :read, :users do %> 
			<%= navigation_item(:users, users_path, true) %>
		<% end %>
	<% end %>
</ul>