<% remote_form_for(@segment, :url => create_segment_path(@structure_template), :html => { :method => :put }) do |f| %>
<%= hidden_field_tag 'segment[asset][kind]', 'single' %>
<fieldset>
	<legend>Single element</legend>
	
	<%= render :partial => 'authored', :locals => { :single => true } %>
	<%= render :partial => 'duration', :locals => { :f => f } %>
	
	<p class="centered">
		<%= submit_tag 'Save' %>
	</p>
</fieldset>
<% end %>
