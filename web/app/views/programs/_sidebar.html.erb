<h1>Administration</h1>
<ul>
	<li><%= link_to 'Edit program', edit_program_path(@program) %></li>
</ul>

<h1>Process configuration</h1>
<ul>
	<li><%= link_to "Recorded emissions", program_process_path(@program, :process_type => 'recorded') %></li>
	<li><%= link_to "Live emissions", program_process_path(@program, :process_type => 'live') %></li>
	<li><%= link_to "Playlist emissions", program_process_path(@program, :process_type => 'playlist') %></li>
</ul>

<div id="minical">
	<%= render :partial => 'shared/minical', 
		:locals => { :date => Time.now, :program => @program, 
					 :emissions => @program.find_emissions_by_date(Time.now.year, Time.now.month) } %>
</div>
