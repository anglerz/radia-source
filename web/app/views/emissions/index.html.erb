<% 
	@pagetitle = "Emissions"
	emission_crumbs
%>

<% content_for :sidebar do %>
	<h1>List emissions by:</h1>
	<h2>Type</h2>
	<h2>Time</h2>
	<% if @program.nil? %>
	<h2>Program</h2>
	<% end %>
	<div id="minical">
		<%= render :partial => 'shared/minical', 
			:locals => { :date => @caldate, :program => @program, 
						 :emissions => @calemissions } %>
	</div>
<% end %>

<ul id="emissions">
<% @emissions.each do |e| %>
	<%= print_emission(e, @program) %>
<% end %>
</ul>