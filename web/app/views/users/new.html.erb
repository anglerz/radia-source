<div id="signup" class="prepend-4 span-8 append-4">
	<h2>Signup</h2>
	
<%= error_messages_for :user %>

<% form_for :user, :url => users_path do |f| -%>
<p><label for="user_login">Login</label><br/>
<%= f.text_field :login %></p>

<p><label for="user_name">Name</label><br/>
<%= f.text_field :name %></p>

<p><label for="user_email">Email</label><br/>
<%= f.text_field :email %></p>

<p><label for="user_identity_url">OpenID</label><br/>
<%= f.text_field :identity_url %></p>

<p><label for="user_password">Password</label><br/>
<%= f.password_field :password %></p>

<p><label for="user_password_confirmation">Confirm Password</label><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'Sign up' %></p>
<% end -%>
</div>